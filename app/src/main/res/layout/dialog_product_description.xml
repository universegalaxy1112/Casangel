<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:background="@drawable/background_outline_black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:padding="@dimen/dip_5"
    android:layout_marginTop="@dimen/dip_50"
    android:layout_marginBottom="@dimen/dip_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <LinearLayout
                android:layout_marginStart="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:layout_marginEnd="@dimen/dip_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:minHeight="@dimen/dip_170"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/productImgViewer"
                            android:layout_width="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/productDetailImgListView"
                        android:layout_marginStart="@dimen/dip_10"
                        android:layout_width="@dimen/dip_70"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/productNameViewer"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_22"
                    android:layout_marginTop="@dimen/dip_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/productDescriptionViewer"
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/btnAddToCart"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:text="@string/add_cart"
            android:background="#444242"
            android:layout_marginTop="@dimen/dip_20"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_marginStart="@dimen/dip_20"
            android:layout_marginEnd="@dimen/dip_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50"
            />
    </LinearLayout>
</RelativeLayout>