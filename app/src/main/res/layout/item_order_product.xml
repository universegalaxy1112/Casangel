<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_150"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dip_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_margin="@dimen/dip_10"
                android:id="@+id/iv_itemImgViewer"
                android:padding="@dimen/dip_5"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dip_30"
            android:textSize="@dimen/sp_15"
            android:id="@+id/tv_itemNameViewer"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_itemCountViewer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dip_30"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_itemTotalPriceViewer"
                android:layout_marginTop="@dimen/dip_30"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/civ_orderStatusViewer"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_shipping"
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_30" />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/v_indicator"
        android:layout_marginStart="@dimen/dip_100"
        android:layout_marginEnd="@dimen/dip_100"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:background="@color/black"
        />
</LinearLayout>
