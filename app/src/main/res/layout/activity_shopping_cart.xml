<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:background="@color/windowBackground"
    tools:context=".tabs.home.ShoppingCartActivity">
    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/dip_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#444242"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_50">
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/iv_btnBack"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_10"
                android:src="@drawable/ic_back_circle"
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_50" />
            <com.koonat.easyfont.TextView
                app:font_path="fonts/century_gothic.ttf"
                android:id="@+id/tv_titleViewer"
                android:text="@string/shopping_cart"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText,RelativeOverlap" />
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/iv_btnDone"
                android:layout_marginEnd="@dimen/dip_10"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_check_circle_outline_24px"
                android:layout_width="@dimen/dip_25"
                android:layout_height="@dimen/dip_50" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dip_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_productListView"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_couponListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="end"
                android:textColor="#315E25"
                android:id="@+id/tv_addMoreProducts"
                android:text="@string/add_more_products"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_40" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#EEE7E7"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip_40">
                    <TextView
                        android:text="COUPON"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/cart_coupon_code"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:layout_marginStart="@dimen/dip_10"
                        android:textSize="@dimen/sp_13"
                        android:paddingStart="@dimen/dip_5"
                        android:paddingEnd="@dimen/dip_5"
                        android:hint="Coupon Code"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_rect_gray"
                        android:layout_width="@dimen/dip_120"
                        android:layout_height="@dimen/dip_30"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                    <Button
                        android:id="@+id/apply_coupon_btn"
                        android:layout_marginStart="@dimen/dip_10"
                        android:textColor="@color/white"
                        android:text="@string/apply"
                        android:gravity="center"
                        android:textSize="@dimen/sp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#EEE7E7"
                app:cardCornerRadius="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:id="@+id/cart_prices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Subtotal"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/cart_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="$00.0"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:textAlignment="textEnd"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Discount"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/cart_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="$00.0"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:textAlignment="textEnd"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:layout_marginTop="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:background="@color/dark_gray"
        />
    <TextView
        android:id="@+id/tv_totalPriceViewer"
        android:gravity="end"
        android:textSize="@dimen/sp_25"
        android:paddingStart="@dimen/dip_20"
        android:paddingEnd="@dimen/dip_20"
        android:paddingTop="@dimen/dip_10"
        android:paddingBottom="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_70" />
    <Button
        android:text="@string/final_purchase"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btnFinalPurchase"
        android:layout_marginStart="@dimen/dip_40"
        android:layout_marginEnd="@dimen/dip_40"
        android:layout_marginBottom="@dimen/dip_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"/>
</LinearLayout>