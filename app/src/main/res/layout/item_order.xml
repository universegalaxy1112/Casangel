<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_marginTop="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_3"
        android:background="@color/black"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50">
        <View
            android:layout_width="@dimen/dip_3"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dip_10"
                android:id="@+id/tv_dateViewer"
                android:text="Fecha: 15 /DIC/2018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dip_10"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dip_10"
                android:id="@+id/tv_noViewer"
                android:text="No. 82309924"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dip_3"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_3"
        android:background="@color/black"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="@dimen/dip_3"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
        <ListView
            android:id="@+id/lv_orderedList"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </ListView>
        <View
            android:layout_width="@dimen/dip_3"
            android:layout_height="match_parent"
            android:background="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_3"
        android:background="@color/black"
        />
</LinearLayout>
