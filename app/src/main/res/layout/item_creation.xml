<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <com.itikarus.miska.library.widget.SquareLinearLayout
        android:id="@+id/ll_itemView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/tv_nameViewer"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_timeViewer"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/iv_thumbViewer"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_addNewPanel"
                android:background="@drawable/outline_rect_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_addIcon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_circle_outline_black_24px"
                    android:layout_width="@dimen/dip_30"
                    android:layout_height="@dimen/dip_30"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dip_20"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/sp_15"
                    android:layout_below="@id/iv_addIcon"
                    android:text="Nueva CreaciÃ³n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </FrameLayout>
    </com.itikarus.miska.library.widget.SquareLinearLayout>
    <ImageView
        android:padding="@dimen/dip_5"
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_btnDelete"
        android:tint="@color/gray"
        android:src="@drawable/ic_delete_black_24px"
        android:layout_width="@dimen/dip_40"
        android:layout_height="@dimen/dip_40"
        tools:ignore="ContentDescription" />
</RelativeLayout>