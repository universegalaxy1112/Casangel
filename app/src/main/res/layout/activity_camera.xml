<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.CameraActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/cv_cameraView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:background="#444242"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_70">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_galleryView"
                app:civ_border_width="@dimen/dip_1"
                app:civ_border_color="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dip_10"
                android:layout_width="@dimen/dip_40"
                android:layout_height="@dimen/dip_40" />
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/iv_btnShutter"
                android:src="@drawable/circle_camera_shutter"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dip_55"
                android:layout_height="@dimen/dip_55" />
            <com.itikarus.miska.library.widget.ClickEffectImageView
                android:id="@+id/iv_btnReturn"
                android:src="@drawable/ic_baseline_reply_24px"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dip_10"
                android:layout_width="@dimen/dip_40"
                android:layout_height="@dimen/dip_40" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_dialogInstruction"
        android:background="#86413E3E"
        android:layout_marginTop="@dimen/dip_100"
        android:layout_marginStart="@dimen/dip_20"
        android:layout_marginEnd="@dimen/dip_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/instructions"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_25"
                android:layout_marginTop="@dimen/dip_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/msg_instruction"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:padding="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.itikarus.miska.library.widget.ClickEffectImageView
            android:id="@+id/iv_btnClose"
            android:src="@drawable/ic_clear_black_24px"
            android:padding="@dimen/dip_5"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dip_40"
            android:layout_height="@dimen/dip_40" />
    </RelativeLayout>
</RelativeLayout>