<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_300"
    >
    <LinearLayout
        android:layout_margin="@dimen/dip_5"
        android:id="@+id/ll_itemView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_marginTop="@dimen/dip_5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_iconViewer"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                tools:ignore="ContentDescription" />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_addCart"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal|bottom"
                    android:layout_gravity="center_horizontal"
                    android:lines="2"
                    android:maxLines="2"
                    android:id="@+id/tv_productNameViewer"
                    android:text="Reloj Sticker"
                    android:layout_margin="@dimen/dip_2"
                    android:textColor="@color/dark_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/tv_productPriceViewer"
                    android:text="$ 49.900"
                    android:layout_margin="@dimen/dip_2"
                    android:textColor="@color/dark_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>